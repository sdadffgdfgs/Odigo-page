                        <div class="benefits__card-button">
                            <a href="#" class="benefits__card-link">LEARN MORE</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="places">
            <div class="wrapper__large">
                <div class="places__caption">
                    <h2 class="places__title section-title">
                        Get inspired for your next trip
                    </h2>
                    <div class="places__button">
                        <a href="#" class="places__button-link">VIEW ALL</a>
                    </div>
                </div>

                <div class="trip__cards">

                    <div class="trip__card trip__card-size-large">
                        <img src="/img/main/trip/image_1.png" alt="Mount Fuji"
                            class="trip__card-pic trip__card-pic-size-large">
                        <p class="trip__card-title">Mount Fuji</p>
                        <a href="#" class="trip__card-link"></a>
                    </div>

                    <div class="trip__card trip__card-size-large">
                        <img src="/img/main/trip/image_2.png" alt="Kyoto"
                            class="trip__card-pic trip__card-pic-size-large">
                        <p class="trip__card-title">Kyoto</p>
                        <a href="#" class="trip__card-link"></a>
                    </div>

                    <div class="trip__card trip__card-size-small">
                        <img src="/img/main/trip/image_3.png" alt="Tokyo"
                            class="trip__card-pic trip__card-pic-size-small">
                        <p class="trip__card-title">Tokyo</p>
